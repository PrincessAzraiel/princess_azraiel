{
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/api/$1" },
      { "source": "/(.*)", "destination": "/frontend/$1" }
    ],
    "builds": [
      { "src": "backend/api/**/*.ts", "use": "@vercel/node" },
      { "src": "frontend/package.json", "use": "@vercel/static-build" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/api/$1" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  